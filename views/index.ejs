<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/global.css" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <%- include("navbar"); -%>
    <main>
      <h1 class="title"><%= title %></h1>
      <h2 class="sub-title">Welcome to <%= title %></h2>

      <ul class="msg-list">
        <% messages.forEach(function(msg){ %>
        <li>
          <div class="msg-author-wrapper">
            <p><%=msg.username %></p>
            <p>
              <%= (function() {return (new
              Date(msg.added_at).toLocaleDateString()) })() %>
            </p>
          </div>
          <p class="msg"><%=msg.content %></p>
        </li>
        <% }) %>
      </ul>
    </main>

    <%- include("footer"); -%>
  </body>
</html>
