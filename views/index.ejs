<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <h2>Welcome to <%= title %></h2>

    <a href="/new">Post New Message!</a>
    <ul>
      <% messages.forEach(function(msg){ %>
      <li>
        <p><%=msg.text %></p>
        <span>Posted by: <%=msg.user %>. Date: <%=msg.added%></span>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
